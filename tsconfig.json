{
  "compilerOptions": {
    "outDir": "./public/dist",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "typeRoots": [
      "/node_modules/@types",
      "/typings/**/*",
    ]
  },
  "include": [
    "assets"
  ],
  "exclude": [
    "node_modules",
  ]
}
